<Window x:Class="PilotkaBotWPF.InventoryMarketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PilotkaBotWPF"
        mc:Ignorable="d"
        Title="InventoryMarketWindow" Height="300" Width="300">
    <Grid>
        <ScrollViewer>
            <StackPanel>

                <DataGrid x:Name="dataGridView1" />

                <Button x:Name="buttonItemRequestModeOff" Content="RequestModeOff" Click="buttonItemRequestModeOff_Click_1" />
                <Button x:Name="buttonItemRequestMode" Content="RequestMode" Click="buttonItemRequestMode_Click_1" />
                <TextBox x:Name="textBoxPrice" />
                <Label x:Name="labelProgress" ></Label>
                <Button x:Name="buttonRemoveAll" Content="RemoveAll" Click="buttonRemoveAll_Click" />
                <Button x:Name="buttonUpdateGroup" Content="UpdateGroup" Click="buttonUpdateGroup_Click" />
                <Button x:Name="buttonUpdate" Content="buttonUpdate" Click="buttonUpdate_Click" />

               
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
